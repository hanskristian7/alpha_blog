<div id="page-content">
    <div class="container container-fluid">
        <h1 class="text-center">Article pages</h1>
        
        <div class="row justify-content-center mt-5">
            <div class="col-8">
                <div class="card text-center">
                    <div class="card-header bg-dark text-light">
                        <%= link_to @article.user.username, user_path(@article.user), class: "text-white" %>
                        <%= gravatar_for(@article.user) %>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title font-weight-bold text-success"><%= @article.title %></h5>
                        <p class="card-text"><%= @article.description %></p>

                        <% if logged_in? && (@article.user == current_user || current_user.admin?) %>
                            <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-success" %>
                            <%= link_to 'Delete', article_path(@article), method: :DELETE, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
                        <% end %>
                    </div>
                    <div class="card-footer text-muted bg-dark text-light">
                        <small>Created <%= time_ago_in_words(@article.created_at) %> ago, edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
                    </div>
                </div>
            </div>
        </div>
    </div>


