<div class="container container-fluid">
    <%= render 'shared/errors', obj: @article %>
    
    <%= form_with(model: @article, class: "shadow p-5 rounded bg-info text-white", local: true) do |f| %>
        <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                <%= f.label :title %>
            </div>
            <div class="col-sm-10">
                <%= f.text_field :title, placeholder: "Type Title Here...", class: "form-control" %>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2 col-form-label">
                <%= f.label :Description %>
            </div>
            <div class="col-sm-10">
                <%= f.text_area :description, placeholder: "Type Description Here...", rows: 10, class: "form-control" %>
            </div>
        </div>
        <div class="form-group row justify-content-center">
            <%= f.submit class: "btn btn-dark mt-2 shadow" %>    
        </div>
    <% end %>
</div>


